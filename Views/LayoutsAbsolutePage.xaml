                 AbsoluteLayout.LayoutBounds="0.65, 0.2, 0.2, 0.06"
                 AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional, HeightProportional"/>

        <BoxView Color="IndianRed"
                 AbsoluteLayout.LayoutBounds="0.95, 0.2, 0.2, 0.06"
                 AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional, HeightProportional"/>

        <Label Text="01"
               TextColor="MediumPurple"
               Style="{StaticResource AbsoluteLayoutText}"
               AbsoluteLayout.LayoutBounds="0.05, 0.2, 0.2, 0.06"
               AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional, HeightProportional"/>

