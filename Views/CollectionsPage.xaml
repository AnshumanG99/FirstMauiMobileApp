<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMauiMobileApp.Views.CollectionsPage"
             Title="CollectionsPage">

    <ContentPage.Resources>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BackgroundColor" Value="MediumSeaGreen" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="HorizontalOptions" Value="Fill" />
        </Style>

    </ContentPage.Resources>
    
    <VerticalStackLayout>

        <Grid   Padding="16, 24, 16, 16"
                RowSpacing="6"
                ColumnSpacing="12">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0"
                    Grid.Column="0"
                    Text="{Binding Collections}"
                    Command = "{Binding CollectionsClickedCommand}" />

            <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="{Binding Images}"
                    Command = "{Binding ImagesClickedCommand}" />

            <Button Grid.Row="1" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="{Binding Buttons}" 
                    Command = "{Binding ButtonsClickedCommand}" />

            <Button Grid.Row="2" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="{Binding Icons}" 
                    Command = "{Binding IconsClickedCommand}" />

        </Grid>

    </VerticalStackLayout>
    
</ContentPage>