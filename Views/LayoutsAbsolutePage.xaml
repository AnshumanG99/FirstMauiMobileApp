             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMauiMobileApp.Views.LayoutsAbsolutePage"
             Title="{Binding AbsoluteLayoutTitle}">
    
    <AbsoluteLayout>

        <Label Text="Absolute!"
               HorizontalTextAlignment="Center"
               FontSize="Large"
               AbsoluteLayout.LayoutBounds="0.5, 0.1, 100, 100"
