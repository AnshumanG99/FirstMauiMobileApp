<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FirstMauiMobileApp.Models.Entities"
             x:Class="FirstMauiMobileApp.Views.CollectionsImagesPage"
             Title="{Binding Title}">

    <VerticalStackLayout>

        <BoxView HeightRequest="2" BackgroundColor="Black"/>

        <CollectionView x:Name="ItemsListView"
                        ItemsSource="{Binding MarvelCharactersCollection}"
                        SelectionMode="None">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:MarvelCharacters">
                    <Grid Padding="2">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <HorizontalStackLayout>
                            <Image Source="{Binding ImagePath}" HeightRequest="100" WidthRequest="100" Aspect="Fill"/>
                            <VerticalStackLayout Margin="0,15,0,0">
                                <Label Text="{Binding CharacterName}"
                                       FontAttributes="Bold" 
                                       HorizontalTextAlignment="Start"
                                       FontSize="Medium"/>
                                <Label Text="{Binding ActorName}"
                                       FontAttributes="Bold" 
                                       HorizontalTextAlignment="Start"
                                       FontSize="Medium"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>